{
  "name": "wiki-langlinks-api",
  "version": "0.2.0",
  "description": "Prototype of an API to show translation into several languages at once using MediaWiki API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon -x npm start",
    "pretest": "npm run lint",
    "test": "ava test/**/*.test.js",
    "testw": "ava test/**/*.test.js --watch",
    "e2e": "ava e2e-test/**/*.test.js",
    "ci": "npm run test && npm run e2e",
    "lint": "xo",
    "dock": "docker build -t wiki-langlinks-api .",
    "start-docker": "docker run --rm -p 3000:3000 --name wiki-langlinks-api wiki-langlinks-api"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iredchuk/wiki-langlinks-api.git"
  },
  "keywords": [
    "wiki",
    "mediawiki",
    "languages",
    "translation"
  ],
  "author": "iredchuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iredchuk/wiki-langlinks-api/issues"
  },
  "homepage": "https://github.com/iredchuk/wiki-langlinks-api#readme",
  "dependencies": {
    "cors": "~2.8.3",
    "express": "~4.15.3",
    "superagent": "~3.5.2"
  },
  "devDependencies": {
    "ava": "~0.19.1",
    "nodemon": "~1.11.0",
    "xo": "~0.18.2"
  },
  "xo": {
    "envs": ["node"],
    "rules": {
      "object-curly-spacing": ["error", "always"]
    }
  }
}
